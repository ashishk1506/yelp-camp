<% layout('./layout/boilerplate') %>
    <link href="https://api.mapbox.com/mapbox-gl-js/v2.3.1/mapbox-gl.css" rel="stylesheet">
    <div id='map-cluster'></div>
    <%campgrounds.map((data)=>{%>
        <!-- <li>
        <a href="/campgrounds/<%=data._id%>">
            <%=data.location%>
        </a>
    </li> -->
        <div class="card m-2">
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid" src="<%=data.images.length >0 ? data.images[0].url : ''%>">
                </div>

                <div class="col-md-8 card-body">
                    <h5 class="card-title">
                        <%=data.title%>

                    </h5>
                    <p class="card-text">
                        <%=data.description%>
                    </p>
                    <small class="text-muted"><a href="/campgrounds/<%=data._id%>" class="btn btn-primary">
                            <%=data.location%>
                        </a></small>
                </div>
            </div>
        </div>
        <%})%>
            <script>
                const mapToken = '<%-process.env.MAPBOX_TOKEN%>'
                const campgrounds = {
                    features: <%-JSON.stringify(campgrounds)%>
                }
            </script>
            <script src="https://api.mapbox.com/mapbox-gl-js/v2.3.1/mapbox-gl.js"></script>
            <script src="/js/clusterMap.js"></script>